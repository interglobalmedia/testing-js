{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "indent": ["off"],
    "linebreak-style": ["off", "eol-last"],
    "quotes": ["error", "single"],
    "semi": ["off"]
  }
}
